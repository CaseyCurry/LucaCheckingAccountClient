{
  "Job": {
    "ID": "checking-account-client",
    "Name": "checking-account-client",
    "Type": "service",
    "Datacenters": [
      "dev-lab"
    ],
    "Constraints": [{
      "LTarget": "${meta.rkt}",
      "RTarget": "1",
      "Operand": "="
    }],
    "TaskGroups": [{
      "Name": "service",
      "Count": 1,
      "Tasks": [{
        "Name": "client",
        "Driver": "rkt",
        "Config": {
          "image": "http://192.168.56.110/checking-account-client.{{version}}.aci",
          "insecure_options": [
            "image"
          ],
          "port_map": [{
            "app": "http"
          }]
        },
        "Services": [{
          "Id": "/client/checking-account",
          "Name": "checking-account-client",
          "Tags": [
            "luca",
            "client"
          ],
          "PortLabel": "app",
          "Checks": [{
            "Name": "Checking Account Client Healthy",
            "Type": "http",
            "Path": "/app.min.js",
            "Interval": 10000000000,
            "Timeout": 2000000000
          }]
        }],
        "Resources": {
          "CPU": 150,
          "MemoryMB": 64,
          "Networks": [{
            "MBits": 10,
            "DynamicPorts": [{
              "Label": "app"
            }]
          }]
        },
        "LogConfig": {
          "MaxFiles": 5,
          "MaxFileSizeMB": 10
        }
      }],
      "RestartPolicy": {
        "Interval": 300000000000,
        "Attempts": 10,
        "Delay": 25000000000,
        "Mode": "delay"
      },
      "EphemeralDisk": {
        "SizeMB": 100
      }
    }]
  }
}
